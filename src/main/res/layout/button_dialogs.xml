    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/rel_layout"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false">

        <TextView
            android:id="@+id/label123"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@+id/label123"
            android:textAlignment="center"
            android:textSize="19sp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:background="#ffffff"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:clickable="false"></TextView>

        <ImageView
            android:layout_width="2dp"
            android:layout_height="20sp"
            android:id="@+id/line_new"
            android:background="#afafaf"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20sp" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="20sp"
            android:id="@+id/line_new2"
            android:background="#afafaf"
            android:layout_toEndOf="@+id/line_new"
            android:layout_alignTop="@+id/line_new"
            android:layout_toRightOf="@+id/line_new"
            android:layout_marginLeft="3dp" />

        <ImageView
            android:layout_width="22sp"
            android:layout_height="22sp"
            android:id="@+id/sent_icon_image"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@+id/label1234"
            android:id="@+id/label1234"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10sp"
            android:textColor="#afafaf"
            android:textSize="18sp" />

        <ProgressBar
            android:id="@+id/pb_"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:indeterminate="true"
            android:translationZ="2dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:alpha="0"/>

    </RelativeLayout>


</RelativeLayout>