<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin_msg"
    android:background="#ffffff">

    <Space
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/space"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:visibility="invisible"
        android:id="@+id/map_rl">

        <fragment
            class="com.google.android.gms.maps.SupportMapFragment"
            android:id="@+id/map"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/icon1"
        android:clickable="true"
        android:onClick="sendMsg0"
        android:background="@drawable/logo"
        android:padding="10dp"
        android:layout_alignTop="@+id/space"
        android:layout_toLeftOf="@+id/textView12"
        android:layout_toStartOf="@+id/textView12" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/icon2"
        android:layout_alignTop="@+id/space"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="sendMsg1"
        android:background="@drawable/logo"
        android:padding="10dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/icon3"
        android:clickable="true"
        android:onClick="sendMsg2"
        android:background="@drawable/logo"
        android:padding="10dp"
        android:layout_alignTop="@+id/space"
        android:layout_toRightOf="@+id/textView12"
        android:layout_toEndOf="@+id/textView12" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/icon6"
        android:clickable="true"
        android:onClick="sendMsg5"
        android:background="@drawable/logo"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/icon3"
        android:layout_alignStart="@+id/icon3"
        android:padding="10dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/icon5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="sendMsg4"
        android:background="@drawable/logo"
        android:padding="10dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/icon4"
        android:clickable="true"
        android:onClick="sendMsg3"
        android:background="@drawable/logo"
        android:layout_alignTop="@+id/icon5"
        android:layout_alignLeft="@+id/icon1"
        android:layout_alignStart="@+id/icon1"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/adr"
        android:layout_above="@+id/space"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:textColor="#a5a5a5"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView12"
        android:textColor="#a5a5a5"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/space"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:visibility="invisible"
        android:id="@+id/photo_rel">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/photo_img"
            android:cropToPadding="false"
            android:scaleType="centerCrop" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible"
        android:layout_above="@+id/space"
        android:layout_marginBottom="0dp"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="214px"
            android:layout_height="214px"
            android:id="@+id/big_icon"
            android:src="@drawable/logo"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>
