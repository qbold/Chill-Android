<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".SendActivity">

    <ImageView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rect" />

    <TextView
        android:id="@+id/title_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_column="17"
        android:layout_marginTop="16dp"
        android:layout_row="4"
        android:text="@string/hs_dialogs"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#6a6a6a"
        android:textSize="20sp" />

    <Space
        android:id="@+id/space"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp" />

    <Button
        android:id="@+id/send1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/space"
        android:layout_alignStart="@+id/space"
        android:layout_alignTop="@+id/space"
        android:onClick="sendIcon0"
        android:background="@drawable/logo"
        android:clickable="true" />

    <Button
        android:id="@+id/send3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/space"
        android:layout_alignRight="@+id/space"
        android:layout_alignTop="@+id/space"
        android:onClick="sendIcon2"
        android:background="@drawable/logo"
        android:clickable="true" />

    <Button
        android:id="@+id/send2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/send1"
        android:layout_centerHorizontal="true"
        android:onClick="sendIcon1"
        android:background="@drawable/logo"
        android:clickable="true" />

    <Button
        android:id="@+id/send6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/space"
        android:layout_alignEnd="@+id/space"
        android:layout_alignRight="@+id/space"
        android:onClick="sendIcon5"
        android:background="@drawable/logo"
        android:clickable="true" />

    <Button
        android:id="@+id/send5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/space"
        android:layout_centerHorizontal="true"
        android:onClick="sendIcon4"
        android:background="@drawable/logo"
        android:clickable="true" />

    <Button
        android:id="@+id/send4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/space"
        android:layout_alignLeft="@+id/space"
        android:layout_alignStart="@+id/space"
        android:onClick="sendIcon3"
        android:background="@drawable/logo"
        android:clickable="true" />

    <Space
        android:id="@+id/space2"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/send_pic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/space2"
        android:layout_alignStart="@+id/space2"
        android:layout_alignTop="@+id/space2"
        android:onClick="sendPhoto"
        android:layout_marginLeft="10dp"
        android:background="@drawable/pic"
        android:clickable="true" />

    <Button
        android:id="@+id/send_loc"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/space2"
        android:layout_centerHorizontal="true"
        android:onClick="sendLocation"
        android:background="@drawable/location"
        android:clickable="true" />

    <Button
        android:id="@+id/fav_icons"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/space2"
        android:layout_alignRight="@+id/space2"
        android:layout_alignTop="@+id/space2"
        android:onClick="setFavorite"
        android:layout_marginRight="10dp"
        android:background="@drawable/stary"
        android:clickable="true" />

    <Button
        android:background="@null"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:onClick="moreClick"
        android:singleLine="true"
        android:text="@string/more"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00cea0"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/space"
        android:layout_alignLeft="@+id/space"
        android:layout_alignRight="@+id/space"
        android:layout_alignStart="@+id/space"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/hashT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#"
            android:textColor="#00cea0"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/hashTag"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.75"
            android:background="@null"
            android:hint="taptotype"
            android:maxLength="10"
            android:singleLine="true" />

        <TextView
            android:id="@+id/hashTagCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="10"
            android:textColor="#00cea0"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>
